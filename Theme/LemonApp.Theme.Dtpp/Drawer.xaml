<theme:ThemeBase
      xmlns:theme="clr-namespace:LemonApp.Theme;assembly=LemonApp.Theme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LemonApp.Theme.Dtpp"
      mc:Ignorable="d" 
      x:Class="LemonApp.Theme.Dtpp.Drawer"
      d:DesignWidth="1070" d:DesignHeight="690"
      RenderOptions.BitmapScalingMode="LowQuality">
    <Canvas x:Name="canvas">
        <Canvas.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                        <RotateTransform Angle="-45" CenterY="0.5" CenterX="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FF48BB8B" Offset="1"/>
                <GradientStop Color="#FF5EBFBE"/>
            </LinearGradientBrush>
        </Canvas.Background>
    </Canvas>
</theme:ThemeBase>
