        </Border>
        <Grid x:Name="PlayControl">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Border x:Name="PlayLastBtn" Background="#00000000" Margin="65,0,0,0" MouseDown="PlayControl_PlayLast">
                <Path Data="{DynamicResource PlayIcon_Last}" Stretch="Uniform" StrokeThickness="5" Fill="{DynamicResource ResuColorBrush}" Width="10" Height="15" Opacity="0.3" HorizontalAlignment="Left" Margin="30,0,0,0"/>
            </Border>
            <Border x:Name="PlayBtn" MouseDown="PlayBtn_MouseDown" Background="#00000000" Grid.Column="1"/>
            <Border x:Name="PlayNextBtn" MouseDown="PlayControl_PlayNext" Background="#00000000" Grid.Column="2">
                <Path Data="{DynamicResource PlayIcon_Next}" Stretch="Uniform" StrokeThickness="5" Fill="{DynamicResource ResuColorBrush}" Width="10" Height="15" Opacity="0.3" HorizontalAlignment="Right" Margin="0,0,125,0"/>
            </Border>
        </Grid>

    </Grid>
</Window>
