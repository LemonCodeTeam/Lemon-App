<UserControl x:Class="LemonApp.PlayDLItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="60" Background="#00000000" RenderOptions.BitmapScalingMode="LowQuality">
    <Grid x:Name="grid">
        <Border x:Name="img" Margin="5,3,0,3" Width="54" HorizontalAlignment="Left" CornerRadius="{DynamicResource AppCornerRadius}" Visibility="Collapsed" BorderBrush="{DynamicResource ImageBorderColor}" BorderThickness="{DynamicResource ImageBorder}"/>
        <TextBlock x:Name="MusicName" TextWrapping="NoWrap" VerticalAlignment="Top" Margin="15,12,10,0" Foreground="{DynamicResource PlayDLPage_Font_Most}"/>
        <TextBlock x:Name="SingerName" TextWrapping="NoWrap" VerticalAlignment="Top" Margin="15,32,10,0" Foreground="{DynamicResource PlayDLPage_Font_Low}"/>
        <Border x:Name="bk" HorizontalAlignment="Left" Width="5" Margin="2,10,0,10" Background="{DynamicResource ThemeColor}" Visibility="Collapsed" CornerRadius="2.5,2.5,2.5,2.5" VerticalAlignment="Center" Height="35"/>
    </Grid>
</UserControl>
