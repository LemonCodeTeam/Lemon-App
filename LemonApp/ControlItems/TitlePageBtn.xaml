<UserControl x:Class="LemonApp.TitlePageBtn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LemonApp"
             mc:Ignorable="d" MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" Cursor="Hand">
    <Grid Background="#00000000">
        <Border x:Name="Mask" Background="#0C000000" CornerRadius="5,5,5,5" Visibility="Collapsed" Margin="-5,-5,-5,-5" />
        <Path x:Name="path" Stretch="Uniform" Fill="{DynamicResource ResuColorBrush}" Margin="5"/>
    </Grid>
</UserControl>
