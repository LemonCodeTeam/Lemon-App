<UserControl x:Class="LemonApp.SkinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LemonApp"
             mc:Ignorable="d" 
             Height="129" Width="176">
    <Grid>
        <Border x:Name="img" Height="99" VerticalAlignment="Top" Background="{DynamicResource ThemeColor}" CornerRadius="5"/>
        <TextBlock x:Name="name" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Bottom" Margin="0,0,0,7" Foreground="{DynamicResource ResuColorBrush}" TextAlignment="Center"/>

    </Grid>
</UserControl>
