<UserControl x:Class="LemonApp.ContentPage.RadioIndexPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LemonApp.ContentPage"
             xmlns:LemonApp="clr-namespace:LemonApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <LemonApp:MyScrollView x:Name="sv">
        <Grid>
            <TextBlock HorizontalAlignment="Left" Height="30" Margin="20,10,0,0" TextWrapping="Wrap" Text="在线电台" VerticalAlignment="Top" Width="101" Foreground="{DynamicResource ResuColorBrush}" FontSize="24"/>
            <WrapPanel x:Name="RadioIndexList" Margin="10,45,10,0" VerticalAlignment="Top" Height="30"/>
            <Border  Margin="0,80,0,0">
                <WrapPanel x:Name="RadioItemsList" Uid="4"/>
            </Border>
        </Grid>
    </LemonApp:MyScrollView>
</UserControl>
