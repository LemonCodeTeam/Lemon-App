<UserControl x:Name="page" x:Class="LemonApp.ContentPage.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LemonApp.ContentPage"
             xmlns:LemonApp="clr-namespace:LemonApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="page_Loaded">
    <LemonApp:MyScrollView x:Name="sv" >
        <WrapPanel x:Name="HomePage_Grid" Orientation="Vertical" VerticalAlignment="Top">
            <LemonApp:ImageForceView x:Name="HomePage_IFV" Height="250" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=page, Mode=OneWay}" Margin="10,0"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="歌单推荐" VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource ResuColorBrush}" Margin="20,10,0,0"/>
            <WrapPanel x:Name="HomePage_Gdtj" Margin="0,20,0,0" Uid="4"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="新歌首发" VerticalAlignment="Top" FontSize="24" Foreground="{DynamicResource ResuColorBrush}" Margin="20,10,0,0"/>
            <WrapPanel x:Name="HomePage_Nm" Margin="0,20,0,0" Uid="4"/>
        </WrapPanel>
    </LemonApp:MyScrollView>
</UserControl>
