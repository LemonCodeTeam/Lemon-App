                    <LemonApp:RbBox ContentText="蓝调" Uid="20" Margin="0,0,5,5"/>
                </WrapPanel>
            </WrapPanel>
            <WrapPanel x:Name="SingerItemsList" Uid="5" Margin="0"/>
        </WrapPanel>
    </LemonApp:MyScrollView>
</UserControl>
