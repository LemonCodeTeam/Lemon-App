                    <LemonApp:RbBox ContentText="其他" Uid="6" Margin="0,0,5,5"/>
                </WrapPanel>
                <WrapPanel x:Name="SingerSex" Margin="0">
                    <LemonApp:RbBox ContentText="全部" Uid="-100" Margin="0,0,20,5"/>
                    <LemonApp:RbBox ContentText="男" Uid="0" Margin="0,0,5,5"/>
