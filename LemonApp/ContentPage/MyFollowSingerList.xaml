<UserControl x:Class="LemonApp.MyFollowSingerList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LemonApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <local:MyScrollViewer x:Name="sv" ScrollChanged="SingerPage_sv_ScrollChanged" Template="{DynamicResource ScrollViewerControlTemplate}">
        <Grid>
            <TextBlock HorizontalAlignment="Left" Height="30" Margin="20,10,0,0" TextWrapping="Wrap" Text="我关注的歌手" VerticalAlignment="Top" Foreground="{DynamicResource ResuColorBrush}" FontSize="24" FontWeight="Bold"/>
            <WrapPanel x:Name="ItemsList" Margin="0,50,0,0" Uid="4"/>
        </Grid>
    </local:MyScrollViewer>
</UserControl>
