<Window x:Class="LemonApp.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LemonApp"
        mc:Ignorable="d"
        Title="LoadingWindow" Height="66" Width="180" ShowInTaskbar="False" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" CaptionHeight="1" />
    </WindowChrome.WindowChrome>
    <Grid Background="{DynamicResource PlayDLPage_Bg}">
        <TextBlock x:Name="SignText" TextWrapping="Wrap" Text="加载中" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource ResuColorBrush}" Margin="0,0,0,21"/>
        <ProgressBar x:Name="jd" Height="5" VerticalAlignment="Center" Foreground="{DynamicResource ThemeColor}" Background="{DynamicResource PlayDLPage_Bg}" Margin="10,14,10,0" BorderBrush="{DynamicResource PlayDLPage_Border}"/>
    </Grid>
</Window>