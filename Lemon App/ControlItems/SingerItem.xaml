<UserControl x:Class="Lemon_App.SingerItem"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lemon_App"
             mc:Ignorable="d" Width="130" Height="150" MinWidth="130" MaxWidth="200">
    <Grid>
        <Border Background="#19000000" CornerRadius="5"/>
        <Border x:Name="im" Background="#FF007ACC" Height="100" VerticalAlignment="Top" Width="100" Margin="0,15,0,0" CornerRadius="100"/>
        <TextBlock x:Name="name" Margin="10,0,10,10" TextWrapping="Wrap" Text="TextBlock" Foreground="{DynamicResource TextX1ColorBrush}" FontSize="14" TextAlignment="Center" RenderTransformOrigin="0.5,0.5" Height="20" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>